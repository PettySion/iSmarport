<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.szip.sportwatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NETWORK_PROVIDER" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:name=".MyApplication"
        android:icon="@mipmap/sport_map_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Contorller.ShareActivity"></activity>
        <activity android:name=".Contorller.SportTrackActivity" />
        <activity android:name=".Contorller.SportDataListActivity" />
        <activity
            android:name=".Contorller.CameraActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Contorller.MainActivity" />
        <activity android:name=".Contorller.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Contorller.LoginActivity"
            android:theme="@style/DefaultCityPickerTheme" />
        <activity
            android:name=".Contorller.ForgetPasswordActivity"
            android:theme="@style/DefaultCityPickerTheme" />
        <activity
            android:name=".Contorller.RegisterActivity"
            android:theme="@style/DefaultCityPickerTheme" />
        <activity android:name=".Contorller.UserInfoActivity" />
        <activity android:name=".Contorller.SetPasswordActivity" />
        <activity android:name=".Contorller.UnitSelectActivity" />
        <activity android:name=".Contorller.StepReportActivity" />
        <activity android:name=".Contorller.SleepReportActivity" />
        <activity android:name=".Contorller.HeartReportActivity" />
        <activity android:name=".Contorller.BloodPressureReportActivity" />
        <activity android:name=".Contorller.BloodOxygenReportActivity" />
        <activity android:name=".Contorller.BluetoochCallActivity" />
        <activity android:name=".Contorller.AboutActivity" />
        <activity android:name=".Contorller.EcgListActivity" />

        <service
            android:name=".Notification.MyNotificationReceiver"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
                <action android:name="android.deletion.notification" />
            </intent-filter>
        </service>
        <service android:name=".Service.MainService" />
        <service
            android:name=".Notification.NotificationReceiver"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity android:name=".Contorller.SeachingActivity" />
        <activity
            android:name=".Contorller.EcgDataActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Contorller.NotificationAppListActivity" />
    </application>

</manifest>