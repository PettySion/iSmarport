<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contorller.UnitSelectActivity"
    android:orientation="vertical"
    android:background="@color/bgColor">

    <include layout="@layout/title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rayblue"
        android:textSize="@dimen/item_text_size"
        android:layout_marginLeft="@dimen/item_margin_parallel"
        android:text="@string/measureUnit"
        android:layout_marginTop="@dimen/item_margin_parallel"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_parallel"
        android:layout_marginRight="@dimen/item_margin_parallel"
        android:layout_marginLeft="@dimen/item_margin_parallel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/metricTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_mine_item"
                android:text="@string/metric"
                android:textColor="@color/rayblue"
                android:textSize="@dimen/item_text_size"
                android:padding="@dimen/item_pad_text"/>

            <TextView
                android:id="@+id/britishTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_parallel"
                android:text="@string/british"
                android:textColor="@color/rayblue"
                android:textSize="@dimen/item_text_size"
                android:padding="@dimen/item_pad_text" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/unitRg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_pad_text">

            <RadioButton
                android:id="@+id/metricRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_pad_text"
                android:paddingTop="@dimen/item_pad_text" />

            <RadioButton
                android:id="@+id/britishRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_parallel"
                android:paddingBottom="@dimen/item_pad_text"
                android:paddingTop="@dimen/item_pad_text"/>
        </RadioGroup>

    </RelativeLayout>




</LinearLayout>